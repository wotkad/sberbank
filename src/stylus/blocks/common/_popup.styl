.popup-bg
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background-color rgba(0,0,0,.5)
	z-index -2
	opacity 0
	cursor pointer
	transition .3s
	height 100%
.popup-bg-active
	opacity 1
	z-index 9998
.popup
	width 500px
	z-index -1
	opacity 0
	position fixed
	left calc(50% - 250px)
	top calc(50% - 150px)
	background-color $white
	border 12px solid $green
	transition .3s
	&__form
		display flex
		flex-wrap wrap
		padding 7%
		justify-content space-between
		position relative
		&-textarea
			flex-basis 100%
			position relative
			border 2px solid $lightgray
			border-radius 3px
			margin-bottom 15px
			display flex
			align-items center
			justify-content center
			& input
				padding 15px 0 15px 52px
				width 100%
				font-size 1rem
				line-height 28px
				border none
				font-family $Light
		&-input
			flex-basis 100%
			position relative
			border 2px solid $lightgray
			border-radius 3px
			margin-bottom 15px
			display flex
			align-items center
			justify-content center
			&:nth-child(1)
				i
					&::before
						margin-top -2px
			& input
				padding 15px 0 15px 52px
				width 100%
				font-size 1rem
				line-height 28px
				border none
				font-family $Light
			& i
				position absolute
				left 20px
				top 20px
				display flex
				color $white
				font-size 12px
				width 18px
				border-radius 3px
				height 18px
				background-color $green
				align-items center
				justify-content center
			& span
				font-family $Bold
				font-size 1rem
				color $black
			&:nth-child(4)
				margin-top 15px
				margin-bottom 0
				display flex
				border none
				align-items center
				& span
					font-family $Light
					color $text
					font-size 0.875rem
					&:nth-child(2)
						margin-left 0
					&:nth-child(3)
						flex-basis 80%
				& a
					display inline-block
					color $green
					border-bottom 1px solid $green
					transition .3s
					&:hover
						color $green - 20%
						border-color $green - 20%
		&-button
			flex-basis 100%
			padding 22px 32px
			font-family $Bold
			color $green
			border-top none
			border-left none
			border-right none
			font-size 1.5rem
			overflow hidden
			position relative
			line-height 19px
			display flex
			align-items center
			justify-content center
			border-radius 30px
			background-color #e3e3e3
			cursor pointer
			transition .3s
			border-bottom 3px solid $green
			&:hover
				box-shadow inset 0 0 15px #00ddb5
				color $white
				background-color $green
			&:after
				content: ""
				position: absolute
				top -50%
				left -50%
				right -50%
				bottom -50%
				background linear-gradient(to bottom,rgba(229,172,142,0),rgba(255,255,255,.7) 50%,rgba(229,172,142,0))
				transform rotateZ(60deg) translate(-5em,7.5em)
				opacity 0
				animation sheens 2.5s infinite
				z-index 100
		&-close
			position absolute
			cursor pointer
			right 10px
			top 10px
			background-color $lightgray
			border-radius 50%
			width 44px
			height 44px
			display flex
			z-index 99
			justify-content center
			align-items center
			i
				color $black
				font-size 20px
				transition .3s
				&:hover
					color $black - 20%
.hide
	display none
.popup-active
	opacity 1
	z-index 9999
@media(max-width: 500px)
	.popup
		left calc(50% - 170px)
		width 340px
		&__form
			&-close
				right calc(50% - 22px)
				top -28
		.radio-custom
			margin 15px 0
