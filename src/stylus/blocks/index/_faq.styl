
.faq
	padding 42px 0 62px 0
	display flex
	flex-wrap wrap
	&__title
		text-align center
		font-family $Bold
		font-size 2.625rem
		line-height 38px
		color $text
		margin-bottom 43px
		flex-basis 100%
	&__block
		flex-basis 100%
		&-image
			height 360px
		&-text
			width 80%
			margin 0 auto
			padding 42px 40px
			font-family $Regular
			font-size 1.125rem
			color $black
			position relative
			margin-top -100px
			background-color $white
			height 350px
			overflow hidden
			box-shadow 0 -23px 23px 3px rgba(0, 0, 0, 0.1)
			& p
				margin-bottom 20px
			&-shadow
				position absolute
				bottom 0
				width 100%
				height 150px
				left 0
				box-shadow inset 0 -150px 100px 0 rgba(255, 255, 255, 1)
		&-button
			background-color $green
			border-radius 3px
			box-shadow 0 0 14px 2px rgba(0, 190, 156, 0.15)
			color $white
			font-family $Bold
			width 175px
			position relative
			height 50px
			display flex
			cursor pointer
			align-items center
			z-index 11
			justify-content center
			margin -25px auto 0 auto
			transition .3s
			position relative
			&:hover
				box-shadow 0 0 24px 4px rgba(0,190,156,.5)
			& i
				transition .3s
			&:hover i
				transform rotate(180deg)
			& span
				margin-left 5px
@media(max-width: 1140px)
	.faq
		&__block
			&:nth-child(2)
				flex-basis 100%
				padding 0
			&-text
				padding-left 14px
			&:nth-child(3)
				flex-basis 100%
				padding-left 0
				margin-top 25px
@media(max-width: 991px)
	#faq
		display none
@media(max-width: 767px)
	.faq__title
		padding 0
