.home-bg
	position absolute
	background-color rgba(0,0,0,.5)
	top 0
	left 0
	width 100%
	height 100%
	z-index 2
.home-img
	height 100vh
	z-index 1
@keyframes sheens
	0%,
	79%
		opacity 0
		-webkit-transform rotateZ(60deg) translate(-5em, 7.5em)
		transform rotateZ(60deg) translate(-5em, 7.5em)
	80%
		opacity 1
		-webkit-transform rotateZ(60deg) translate(-5em, 7.5em)
		transform rotateZ(60deg) translate(-5em, 7.5em)
	95%
		opacity 1
		-webkit-transform: rotateZ(60deg) translate(1em, -11em);
		transform: rotateZ(60deg) translate(1em, -11em)
	100%
		opacity 0
		-webkit-transform rotateZ(60deg) translate(1em, -9em)
		transform rotateZ(60deg) translate(1em, -9em)
.home
	position relative
	z-index 3
	display flex
	align-items center
	flex-wrap wrap
	height 100%
	&__items
		display flex
		flex-basis 100%
		flex-wrap wrap
		justify-content space-around
		&-title
			flex-basis 100%
			color $white
			text-align center
			position relative
			font-size 3.25rem
			font-family $Bold
			margin-bottom 28px
		&-item
			flex-basis 40%
			display flex
			justify-content center
			flex-wrap wrap
			position relative
			&-shadow
				position absolute
				bottom 40px
				width 220px
				height 30px
				border-radius 5px
				background-color rgba(0,190,156,.5)
			& span
				z-index 1
				display flex
				align-self flex-end
				&:nth-child(1)
					font-size 2.625rem
					font-family $Regular
					color $white
				&:nth-child(2)
					font-size 4.5rem
					font-family $Bold
					color $white
					line-height 70px
					margin-left 10px
			& p
				flex-basis 100%
				color $white
				font-size 1.5rem
				text-align center
				font-family $Regular
@media(max-width: 991px)
	.home
		flex-wrap wrap
		justify-content center
		&__items
			&-item
				flex-basis 100%
				&:nth-child(2)
					margin-bottom 40px
