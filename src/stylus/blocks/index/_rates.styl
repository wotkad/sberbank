.rates-image
	background url(/images/rates-image.png) 50% 50% no-repeat
	position absolute
	z-index 1
	background-size cover
	width 100%
	height 100%
.rates
	display flex
	padding 46px 0
	flex-wrap wrap
	position relative
	justify-content space-between
	&__center
		position absolute
		width 150px
		left calc(50% - 75px)
		top 32%
		&-image
			&:nth-child(1)
				margin-bottom 29px
	&__title
		width 100%
		flex-basis 100%
		position relative
		margin 0 auto 45px auto
		&-text
			width 50%
			line-height 28px
			font-family $Bold
			font-size 2.625rem
			color $white
			text-align center
			margin 0 auto
			position relative
	&__blocks
		display flex
		justify-content space-between
		flex-wrap wrap
		&-item
			flex-basis 47%
			display flex
			align-items center
			&:nth-child(odd)
				justify-content flex-end
			&:nth-child(even)
				justify-content flex-start
			&-content
				display flex
				flex-direction column
				&:nth-child(odd)
					justify-content flex-end
					text-align right
					margin-right 40px
					.rates__blocks-item-content-separator
						height 2px
						background-color $green
						width 83px
						align-self flex-end
				&:nth-child(even)
					justify-content flex-start
					text-align left
					margin-left 40px
					.rates__blocks-item-content-separator
						height 2px
						background-color $green
						width 83px
				&-title
					font-family $Bold
					line-height 30px
					font-size 1.875rem
					color $white
					padding-bottom 15px
				&-text
					font-family $Regular
					color $white
					font-size 1.375rem
					line-height 38px
					margin-top 15px
					span
						&:nth-child(2)
							margin-left 5px
@media(max-width: 991px)
	.rates
		&__center
			display none
		&__blocks
			flex-basis 80%
			margin 0 auto
			&-item
				flex-basis 100%
@media(max-width: 991px)
	.rates
		&__blocks
			flex-basis 100%
			margin 0
@media(max-width: 475px)
	.rates
		&__title
			&-text
				width 100%
		&__blocks
			flex-basis 100%
			margin 0
			&-item
				flex-wrap wrap
				&-content
					flex-basis 100%
					display flex
					&:nth-child(odd)
						margin 0
						justify-content center
						text-align center
						.rates__blocks-item-content-separator
							align-self center
					&:nth-child(even)
						margin 0
						justify-content center
						text-align center
						.rates__blocks-item-content-separator
							align-self center
				&-image
					flex-basis 100%
					justify-content center
					display flex
				&:nth-child(2)
					.rates__blocks-item-image
						order 2
				&:nth-child(4)
					.rates__blocks-item-image
						order 2
				&:nth-child(6)
					.rates__blocks-item-image
						order 2
