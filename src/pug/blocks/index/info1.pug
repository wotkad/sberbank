			.info1__item-desc Аккредитована 27 банками
			.info1__item-images
				.info1__item-images-image
					img(src="/images/info1-1.png", alt="info1-1")
				.info1__item-images-image
					img(src="/images/info1-2.png", alt="info1-2")
				.info1__item-images-image
					img(src="/images/info1-3.png", alt="info1-3")
				.info1__item-images-image
					img(src="/images/info1-4.png", alt="info1-4")
				.info1__item-images-image
					img(src="/images/info1-5.png", alt="info1-5")
				.info1__item-images-image
					img(src="/images/info1-6.png", alt="info1-6")
			a(href="#").info1__item-more
				i.fa.fa-list-ul
				span Весь список банков
		.info1__item
			.info1__item-journal
				img(src="/images/journal.png")
				a(target="_blank" href="/files/example.pdf").info1__item-journal-link
					i.fa.fa-eye
					span Смотреть пример отчёта
